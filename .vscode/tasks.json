{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cmake",
			"label": "CMake",
			"group": "build",
			"command": "build",
			"targets": [
				"all"
			],
			"problemMatcher": [],
			"options": {
				"environment": {
					"CLICOLOR_FORCE": "1"
				}
			},
			"detail": "CMake build task"
		},
		{
			"type": "shell",
			"label": "upload",
			"windows": {
				"command": "sudo picotool load -f ${workspaceFolder}/build/pico_app.uf2"
			},
			"linux": {
				"command": "picotool load -f ${workspaceFolder}/build/pico_app.uf2"
				// "command": "picotool load -f ${workspaceFolder}/build/rm_pico_dev/examples/remote/dbus/dbus.uf2"
				// "command": "picotool load -f ${workspaceFolder}/build/rm_pico_dev/examples/hello_world/hello_world.uf2"
				// "command": "picotool load -f ${workspaceFolder}/build/pico_app.uf2"
				// "command": "picotool load -f ${workspaceFolder}/build/pico_app.uf2"
			}
		},
		{
			"label": "open serial monitor",
			"command": "${command:vscode-serial-monitor.monitor0.focus}"
		},
		{
			"label": "build and upload",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOrder": "sequence",
			"dependsOn": [
				"CMake",
				"upload",
				"open serial monitor"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"type": "shell",
			"label": "run test",
			"detail": "run Wokwi tests",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"command": "wokwi-cli ${workspaceFolder} --scenario ${workspaceFolder}/test/wokwi.sample_test.yaml --timeout 1000"
		}
	]
}